datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id          String       @id @default(cuid())
  name        String       @default("")
  email       String       @unique @default("")
  password    String
  mycreatures MyCreature[] @relation("MyCreature_author")
  createdAt   DateTime?    @default(now())
}

model MyCreature {
  id               String  @id @default(cuid())
  pokemonName      String  @default("")
  description      String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  avatar_filesize  Int?
  avatar_extension String?
  avatar_width     Int?
  avatar_height    Int?
  avatar_id        String?
  author           User?   @relation("MyCreature_author", fields: [authorId], references: [id])
  authorId         String? @map("author")
  tags             Tag[]   @relation("MyCreature_tags")

  @@index([authorId])
}

model Tag {
  id          String       @id @default(cuid())
  name        String       @default("")
  mycreatures MyCreature[] @relation("MyCreature_tags")
}
